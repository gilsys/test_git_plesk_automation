---
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import FourBlocks from '~/components/widgets/FourBlocks.astro';
import Hero from '~/components/widgets/Hero.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Stats from '~/components/widgets/Stats.astro';
import { header } from '~/i18n/ui.ts';
import Layout from '~/layouts/PageLayout.astro';
import { getLangFromUrl, useRoutes } from '~/utils/i18n';

const metadata = {
  title: 'Programación a medida de software, apps, web e IA | +20 años',
  description:
    'Empresa de desarrollo personalizado de aplicaciones móviles, web y programas. Expertos en inteligencia artificial. ¡Presupuesto gratuito! (Osona, Barcelona).',
  };

const u = useRoutes(getLangFromUrl(Astro.url));

 // Obtiene la fecha y hora actuales *durante la compilación*
const buildDate = new Date();


const jsonLdWebsite = {
  '@context': 'https://schema.org/',
  '@type': 'WebSite',
  '@id': 'https://www.gilsys.com/#website',
  name: 'gilsys',
  alternateName: metadata.title,
  description: metadata.description,
  url: 'https://www.gilsys.com/',
  datePublished: '2025-02-14T11:26:41+00:00',
  dateModified: buildDate.toISOString(),
};

const jsonLdCorporation = {
  '@context': 'https://schema.org/',
  '@id': 'https://www.gilsys.com/#organization',
  '@type': 'Corporation',
  name: 'gilsys',
  legalname: 'gilsys',
  description: metadata.description,
  image: 'https://www.gilsys.com/logo-programacion-software-a-medida.jpg',
  url: 'https://www.gilsys.com/',
  logo: 'https://www.gilsys.com/gilsys-logo.jpg',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Barcelona',
    addressRegion: 'Catalonia',
    addressCountry: 'ES',
    postalCode: '08580',
    streetAddress: 'Passeig del Ter 48',
  },
  email: 'info@gilsys.com',
  foundingDate: '01-01-2005',
  telephone: '+34711239085',
  sameAs: ['https://www.facebook.com/gilsysg6/', 'https://www.linkedin.com/company/gilsys'],
};
---

<Layout metadata={metadata}>
    <script type="application/ld+json" set:html={JSON.stringify(jsonLdWebsite, null, 2)} />
    <script type="application/ld+json" set:html={JSON.stringify(jsonLdCorporation, null, 2)} />

  <Hero
    id="hero-home"
    tagline=""
    actions={[
      { variant: 'primary', text: 'Presupuesto gratuito', href: u('contact') },
      { text: 'Servicios', href: '#servicios' },
    ]}
    backgroundImage={{      
      src: '~/assets/images/neutral/bg-1.jpg',
      alt: 'Fondo abstracto, inspirado en tecnología y software',
    }}
  >
    <Fragment slot="title">
      Programación a medida de
      <span class="custom-gradient">software</span>,
      <span class="custom-gradient">apps</span>,
      <span class="custom-gradient">web</span> e
      <span class="custom-gradient">IA</span><br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Más de <span class="text-accent highlight">20 años</span> convirtiendo ideas innovadoras en proyectos de éxito.
      </span>
    </Fragment>
  </Hero>
  <Hero2
    tagline="Ayudamos a empresas a adoptar inteligencia artificial"
    actions={[
      {
        variant: 'primary',
        title: 'Programación a medida con inteligencia artificial para empresas',
        text: 'Descubre cómo integrar IA en tu empresa',
        href: u('development/ia'),
      },
    ]}
    image={{
      id: 'home-first-image',
      src: '~/assets/images/inteligencia-artificial.png',
      alt: 'Inteligencia artificial',
    }}
  >
    <Fragment slot="title">
      No te quedes atrás, integra <br /><span class="custom-gradient">Inteligencia Artificial</span> en tu empresa
    </Fragment>

    <Fragment slot="subtitle">
      Somos una empresa de ingeniería informática especializada en desarrollo de software. No solo conocemos las últimas
      novedades en inteligencia artificial, sino que las aplicamos en herramientas empresariales, aplicaciones web, apps móviles a medida y automatización
      de procesos.
    </Fragment>
  </Hero2>

  <FourBlocks
    id="servicios"
    title="Servicios de ingeniería informática"
    information="No adaptes tu empresa a la tecnología, nosotros <span class='text-black'>adaptamos la tecnología a tu empresa</span>."
    blocks={[
      {
        link: u('development'),
        text: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'development').text,
        title: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'development').title,
        excerpt:
          'Desarrollamos utilizando la tecnología más adecuada para cada proyecto, creando herramientas nuevas.',
        image: '~/assets/images/programacion-software-a-medida.jpg',
        links: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'development').links,
      },
      {
        link: u('software'),
        text: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'software').text,
        title: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'software').title,
        excerpt: 'Utilizamos herramientas existentes como base y las ampliamos y adaptamos programando a medida.',
        image: '~/assets/images/software-personalizado.jpg',
        links: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'software').links,
      },
      {
        link: u('migration'),
        text: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'migration').text,
        title: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'migration').title,
        excerpt: 'Optimizamos y migramos herramientas obsoletas y creamos procesos para comunicar plataformas.',
        image: '~/assets/images/migracion-integracion.jpg',
        links: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'migration').links,
      },
      {
        link: u('consultory'),
        text: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'consultory').text,
        title: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'consultory').title,
        excerpt: 'Analizamos la situación actual, conceptualizamos ideas y ofrecemos asesoramiento para ejecutarlas.',
        image: '~/assets/images/consultoria-tecnologica.jpg',
        links: header['es']['links']
          .find((link) => link._id === 'services')
          .links.find((link) => link._id === 'consultory').links,
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-lightgray"></div>
    </Fragment>
  </FourBlocks>

  <!-- Steps2 Widget ****************** -->

  <Features
    id="features"
    tagline="¿Por qué elegir Gilsys?"
    title="Soluciones a medida para tu empresa"
    subtitle="Desarrollo web, apps e inteligencia artificial, programado y personalizado a medida para tu negocio."
    columns={2}
    items={[
      {
        title: 'Experiencia comprobada',
        description:
          'Más de <strong>20 años</strong> desarrollando soluciones tecnológicas para empresas de diversos sectores, aportando una amplia visión y experiencia técnica.',
        icon: 'tabler:flag-2',
      },
      {
        title: 'Soluciones personalizadas',
        description: `Cada proyecto es único. Conocemos el código y sabemos cómo utilizarlo para crear soluciones a medida, evitando adaptar la empresa a herramientas que no se ajustan exactamente a sus necesidades reales.`,
        icon: 'tabler:settings-code',
      },
      {
        title: 'Tecnologías avanzadas',
        description:
          `Trabajamos con herramientas y tecnologías de última generación como la <a href="` +
          u('development/ia') +
          `" title="Creamos programas para empresas que integran IA" class="text-accent">inteligencia artificial</a>, la nube y frameworks modernos para ofrecer resultados innovadores y eficientes.`,
        icon: 'tabler:rocket',
      },
      {
        title: 'Equipo experto',
        description: 'Nos mantenemos pequeños para garantizar proximidad, calidad y control total en cada proyecto.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Innovación responsable',
        description: `Investigamos y aprendemos constantemente nuevas tecnologías, pero solo trabajamos con aquellas en las que podemos garantizar resultados sólidos, fiables y de calidad. Si no lo conocemos, preferimos no abordarlo.`,
        icon: 'tabler:brand-bluesky',
      },
      {
        title: 'Hablarás con ingenieros, no con comerciales',
        description: `Nos apasiona lo que hacemos. Trabajamos para aportar soluciones reales y personalizadas, siempre enfocadas en las necesidades de tu empresa, sin presiones comerciales.`,
        icon: 'tabler:artboard',
      },
      {
        title: 'Presupuesto flexible',
        description: `Nos adaptamos a tu presupuesto, dividiendo el proyecto en fases y priorizando lo más importante para tu negocio.`,
        icon: 'tabler:adjustments-question',
      },
      {
        title: 'Compromiso y soporte',
        description: `Te acompañamos durante todo el proceso, desde la idea inicial hasta la implementación, ofreciendo también servicios de mantenimiento y soporte para asegurar el éxito del proyecto.`,
        icon: 'tabler:eyeglass',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    title="Experiencia y confianza: <span class='custom-gradient'>Gilsys en cifras</span>"
    subtitle="Damos las <strong>gracias</strong> a todos los clientes que han confiado en nuestras soluciones de programación a medida, apps e inteligencia artificial, logrando un impacto real en sus empresas."
    stats={[
      { title: 'Años', amount: '+20' },
      { title: 'Proyectos', amount: '+200' },
      { title: 'Entregas', amount: '+1K' },
      { title: 'Líneas de código', amount: '+1M' },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isImageSmall
    classes={{
      container: 'pb-10 md:pb-0 lg:pb-0',
    }}
    isAfterContent={false}
    items={[
      {
        title: '¿Qué es el Kit Digital?',
        description: `El gobierno de España impulsa el programa <a title="Kit Digital - Subvención para ayudar a digitaliar autónomos y empresas" class="text-accent" href='https://www.acelerapyme.gob.es/kit-digital' target='_blank'>Kit Digital</a>, financiado por fondos europeos Next Generation, para ayudar a pequeñas y medianas empresas, otorgando subvenciones de entre <strong>3.000€</strong> y <strong>29.000€</strong> para invertir en la implantación de nuevas tecnologías.`,
      },
      {
        title: 'Somos agentes digitalizadores',
        description:
          `En Gilsys somos un agente digitalizador certificado dentro del programa Kit Digital. Podemos ayudarte a digitalizar las subvenciones.
          <br />
          <a 
          title='Categorías de servicios subvencionados por el Kit Digital'
          href="` +
          u('kit-digital') +
          `" class="btn-primary mt-12 mb-12 w-auto">Ver categorías subvencionadas</a>`,
      },
    ]}
    image={{
      id: 'image-kit-digital',
      src: '~/assets/images/kit-digital.jpg',
      alt: `Kit Digital - Subvenciones para la implantación de la transformación digital en pymes y autónomos`,
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">KIT DIGITAL</h2>
      <p class="-mb-4">Subvenciones para soluciones digitales para autónomos y empresas de hasta 250 trabajadores.</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-lightgray"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isImageSmall
    isAfterContent
    items={[
      {
        title: '¿Qué es el Kit Consulting?',
        description: `El programa <a class="text-accent" title='Kit Consulting - Subvenciones para asesoramiento en transformación digital e IA' href='https://www.acelerapyme.gob.es/kit-consulting' target='_blank'>Kit Consulting</a>, impulsado por el gobierno de España con fondos europeos Next Generation, ofrece subvenciones de <strong>12.000€</strong> a <strong>24.000€</strong> en diferentes servicios de asesoramiento digital.`,
      },
      {
        title: 'Somos agentes consultores',
        description:
          `En Gilsys somos un agente consultor certificado dentro del programa Kit Consulting. Te ayudamos a aprovechar las subvenciones y diseñar la hoja de ruta para la transformación digital de tu empresa.
          <br />
          <a 
          title='Asesoramiento subvencionado para empresas de Barcelona y Gerona'
          href="` +
          u('kit-consulting') +
          `" class="btn-primary mt-12 mb-12 w-auto">Explorar asesoramientos subvencionados</a>`,
      },
    ]}
    image={{
      id: 'image-kit-consulting',
      src: '~/assets/images/kit-consulting.jpg',
      alt: 'Kit Consulting - Subvenciones para asesoramiento en transformación digital',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">KIT CONSULTING</h2>
      <p class="-mb-4">
        Subvenciones en servicios de asesoramiento en transformación digital para empresas de entre 10 y 250
        trabajadores.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-lightgray"></div>
    </Fragment>
  </Content>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Nuestra experiencia en programación a medida nos permite abordar proyectos en casi cualquier sector"
    subtitle="La informática es un elemento transversal en la mayoría de sectores, por lo que podemos crear aplicaciones y automatizaciones independientemente del tipo de empresa."
    columns={3}
    items={[
      {
        title: 'Tecnológico',
        description:
          `<a href="` +
          u('development/web') +
          `" title="Programación de aplicaciones web a medida" class="text-accent">Herramientas online</a> y <a href="` +
          u('development/apps') +
          `" title="Programación de aplicaciones iOS y Android a medida" class="text-accent">apps móviles</a> con integración de Bluetooth, IA o APIs a medida.`,
        icon: 'tabler:code',
      },
      {
        title: 'Empresarial',
        description:
          `Desarrollo de 
      <a href="` +
          u('development/web') +
          `" title="Programación de webs de alto rendimiento" class="text-accent">páginas web rápidas</a> (no WordPress) y optimizadas para SEO.`,
        icon: 'tabler:affiliate',
      },
      {
        title: 'Retail',
        description:
          `<a href="` +
          u('software/ecommerce') +
          `" title="E-commerce con Prestashop y Woocommerce" class="text-accent">Tiendas online</a>, landing pages e integración con facturación.`,
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Marketing',
        description:
          `Implementación de <a href="` +
          u('software/crm') +
          `" title="Gestores de clientes para empresas y autónomos" class="text-accent">CRM</a>, sincronización de datos de ventas e integración de herramientas digitales.`,
        icon: 'tabler:arrow-big-up-lines',
      },
      {
        title: 'Educación',
        description:
          `<a href="` +
          u('development/web') +
          `" title="Programación de aplicaciones web para formación" class="text-accent">Plataformas de formación online</a> a medida, con sistemas de evaluación avanzados.`,
        icon: 'tabler:school',
      },
      {
        title: 'Salud',
        description:
          `Programación de herramientas online para <a href="` +
          u('development/web') +
          `" title="Diseño y desarrollo de herramientas para gestión de centros médicos" class="text-accent">gestión médica</a>, citas, historiales y control de inventario.`,
        icon: 'tabler:vaccine',
      },
      {
        title: 'Industrial',
        description:
          `Soluciones de <a href="` +
          u('software/pimcore') +
          `" title="Creamos herramientas para la gestión unificada de productos con Pimcore" class="text-accent">gestión de productos PIM</a>, programación de <a href="` +
          u('migration') +
          `" title="Automatizamos tareas con software personalizado" class="text-accent">software para automatizar procesos</a> y sincronizar datos.`,
