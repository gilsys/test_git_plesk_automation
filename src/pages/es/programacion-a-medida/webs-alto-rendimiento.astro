    backgroundImage={{ src: '~/assets/images/dots/27.jpg', alt: 'Fondo abstracto' }}
    actions={[
      {
        variant: 'primary',
        text: 'Presupuesto gratuito',
        href: u('contact'),
      },
      {
        variant: 'primary',
        text: 'Llamar',
        href: 'tel:+34665331271',
      },
    ]}
  >
    <Fragment slot="title">
      Aumenta las visitas, las conversiones y las ventas con <span class="custom-gradient">ASTRO</span> 
    </Fragment>
    <Fragment slot="subtitle"
      >Impulsa tu negocio con una web ultrarrápida, segura e irresistible para Google.</Fragment>
  </CallToAction>





</Layout>
