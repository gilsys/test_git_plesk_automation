prices={[
  {
    title: 'WordPress',
    subtitle: 'Solución intuitiva y popular con una amplia comunidad.',
    items: [
      {
        title: 'Velocidad',
        description: 'Limitada por la carga de plugins y temas.',        
      },
      {
        title: 'SEO avanzado',
        description: 'Limitado a las opciones de plugins.',
      },
      {
        title: 'Facilidad de gestión',
        description: 'Interfaz gráfica intuitiva para usuarios sin conocimientos técnicos.',
