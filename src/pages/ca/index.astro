    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-lightgray"></div>
    </Fragment>
  </FourBlocks>

  <!-- Steps2 Widget ****************** -->

  <Features
    id="features"
    title="Perquè escollir gilsys?"
    subtitle="Experiència + qualitat = <span class='custom-gradient'>tranquil·litat</span>."
