---
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import FourBlocks from '~/components/widgets/FourBlocks.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { getLangFromUrl, useRoutes } from '~/utils/i18n';
import { header } from '~/i18n/ui.ts';

const metadata = {         
  title: 'Programació a mida de software, apps, web i IA | +20 anys',
  description: "Empresa de desenvolupament personalitzat d'aplicacions mòbils, web, programes i eines d’intel·ligència artificial. Pressupost gratuït. Prop de Vic (Osona, Barcelona)."  
};

const u = useRoutes(getLangFromUrl(Astro.url));
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    id="hero-home"
    tagline=""
    actions={[
      { variant: 'primary', target: '_blank', text: 'Pressupost gratuït', href: u('contact') },
      { text: 'Serveis', href: '#serveis' },
    ]}
    backgroundImage={{
      src: '~/assets/images/neutral/bg-1.jpg',
      alt: 'Fons abstracte, inspirat en tecnologia i software',
    }}
  >
    <Fragment slot="title">
      Programació a mida de
      <span class="custom-gradient">software</span>,
      <span class="custom-gradient">apps</span>,
      <span class="custom-gradient">plataformes web</span> i
      <span class="custom-gradient">IA</span><br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Més de <span class="text-accent highlight">20 anys</span> convertint idees innovadores en projectes d'èxit.
      </span>
    </Fragment>
  </Hero>

  <Content
    
    classes={{ 
      container: 'pb-0 md:pb-0 lg:pb-0',
     }}
    title="No et quedis enrere, integra <br/><span class='custom-gradient'>Intel·ligència Artificial</span> a la teva empresa"
    subtitle={`Som una empresa d'enginyeria informàtica, especialitzada en desenvolupament de software. No només coneixem les darreres novetats en <a title='Programació a mida integrant intel·ligència artificial' class='text-accent' href='`+ u('development/ia')  +`'>intel·ligència artificial</a> sinó que les apliquem en eines empresarials, aplicacions web, apps mòbils a mida i automatització de processos.`}
  >
  <Fragment slot="preContent">
    <div class="text-center -mt-4">
      <a title="Programació a mida amb intel·ligència artificial per empreses" href={u('development/ia')} class="btn-primary w-auto">Més informació</a>
    </div>
  </Fragment>
  </Content>


  <FourBlocks
    id="serveis"
    title="<a title='Serveis de programció a mida, software personalitzat, migració i integració i consultoria TIC' name='serveis'>Serveis d'enginyeria informàtica</a>"
    information="No adaptis la teva empresa a la tecnologia, nosaltres <span class='text-black'>adaptem la tecnologia a la teva empresa</span>."
    blocks={[
      {
        link: u('development'),
        title: header['ca']['links'].find((link) => link._id === 'services').links.find((link) => link._id === 'development').text,
        excerpt: 'Desenvolupem utilitzant la tecnologia idònea per a cada projecte, creant eines completament noves.',
        image: '~/assets/images/programacion-software-a-medida.jpg',
        links: header['ca']['links'].find((link) => link._id === 'services').links.find((link) => link._id === 'development').links,
      },
      {
        link: u('software'),
        title: header['ca']['links'].find((link) => link._id === 'services').links.find((link) => link._id === 'software').text,
        excerpt: 'Utilitzem eines existents com a base i les extenem i adaptem programant a mida.',
        image: '~/assets/images/software-personalizado.jpg',

        links: header['ca']['links'].find((link) => link._id === 'services').links.find((link) => link._id === 'software').links,
      },
      {
        link: u('migration'),
        title: header['ca']['links'].find((link) => link._id === 'services').links.find((link) => link._id === 'migration').text,
        excerpt: 'Optimitzem i migrem eines obsoletes i creem processos per comunicar plataformes.',
        image: '~/assets/images/migracion-integracion.jpg',
        links: header['ca']['links'].find((link) => link._id === 'services').links.find((link) => link._id === 'migration').links,
      },
      {
        link: u('consultory'),
        title: header['ca']['links'].find((link) => link._id === 'services').links.find((link) => link._id === 'consultory').text,
        excerpt: 'Analitzem la situació actual, conceptualitzem idees i oferim assessorament per a executar-les.',
