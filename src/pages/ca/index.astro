  </Content>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Sectors pels que treballem"
    subtitle="La nostra experiència en programació de solucions a mida ens permet abordar projectes en gairebé qualsevol sector."
    columns={3}
    items={[
      {
        title: 'Tecnològic',
        description: `Aplicacions web i mòbils amb integració de Bluetooth i APIs a mida.`,
        icon: 'tabler:code',
