---
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Intel·ligència Artificial – Solucions avançades per al teu negoci',
  description:
    'Programem solucions personalitzades amb intel·ligència artificial, integrant LLM a empreses, optimitzant processos i creant automatitzacions i eines innovadores.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero tagline="Integrem la IA per crear eines realment intel·ligents."
  backgroundImage={{ alt:'Fons abstracte', src: '~/assets/images/dots/06.jpg' }}
  >
    <Fragment slot="title">
      Programació integrant<br/><span class="text-accent highlight">Intel·ligència Artificial</span>
    </Fragment>
    <Fragment slot="subtitle">
      Creem eines que utilitzen IA per automatitzar i optimitzar processos, millorar la presa de decisions i potenciar la productivitat de l'empresa.
    </Fragment>
  </Hero>

