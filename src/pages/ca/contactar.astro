---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import ContactForm from '~/components/widgets/ContactForm.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getLangFromUrl, useRoutes, useTranslations } from '~/utils/i18n';

const lang = getLangFromUrl(Astro.url);

const metadata = {
  title: `Contactar`,    
  description: "Sol·licita un pressupost gratuït o informa't dels nostres serveis.",
};

---
<Layout metadata={metadata}>
  <Hero backgroundImage={{ alt: 'Fons abstracte', src: '~/assets/images/dots/03.jpg' }}>
    <Fragment slot="title">
      <span class="custom-gradient">Contactar</span>
    </Fragment>

    <Fragment slot="subtitle">Sol·licita un <span class='custom-gradient'>pressupost gratuït</span> o informa't dels nostres serveis.</Fragment>
  </Hero>
  <WidgetWrapper>
    <div class="grid lg:grid-cols-2 gap-4">
      <div class="order-2 lg:order-1 mt-10 lg:mt-0">
        <iframe
          class="w-full h-full min-h-[300px]"
          src="https://www.openstreetmap.org/export/embed.html?bbox=1,42.133102,2.237501,42.137102&marker=42.135102,2.234501"
          allowfullscreen
          loading="lazy"
        >
        </iframe>
        <p>
          <a href="https://www.google.com/maps?q=42.135102,2.234501" target="_blank" rel="noopener noreferrer" class="text-sm">
            Veure en Google Maps
          </a>
        </p>
      </div>
      <div class="order-1 lg:order-2">
        <ContactForm pageTitle={metadata.title} />
      </div>
    </div>
  </WidgetWrapper>
  <Features3
    columns={4}
    items={[
       {
        title: `Horari`,
        description: `De dilluns a divendres<br/>
        De 09:00 a 18:00`,
        icon: 'tabler:clock'
      },
      {
        title: `Adreça`,
        description: `Passeig del Ter 48<br/>
        08580 Sant Quirze de Besora<br/>
        Barcelona<br/><br/>

        <a class="btn btn-secondary"  href="https://www.google.com/maps?q=42.135102,2.234501" target="_blank" rel="noopener noreferrer" class="text-sm">
            Navegar
        </a>

        `,
        icon: 'tabler:navigation'
      },
      {
        title: `Telèfon`,
        description: `        
        665 33 12 71<br/><br/>
        <a class="btn" href='tel:+34665331271'>Trucar</a>
        <a class="btn btn-secondary" href="https://wa.me/+34665331271">Whatsapp</a>
        `,
        icon: 'tabler:phone-call'
      },      
      {
        title: `E-mail`,
        description: `info@gilsys.com<br/><br/>
        <a class="btn btn-secondary" href="mailto:info@gilsys.com">Enviar e-mail</a>
        `,
        icon: 'tabler:mail'
      },
    ]}
    />

</Layout>