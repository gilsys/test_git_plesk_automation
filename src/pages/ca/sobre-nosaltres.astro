---
import FAQs from '~/components/widgets/FAQs.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps from '~/components/widgets/Steps.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Projectes d\'intel·ligència artificial i programació de software a Osona.',
  description: 'Més de 20 anys desenvolupant projectes de software. Ens trobaràs prop de Vic, Barcelona, Catalunya.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    backgroundImage={{alt: 'Fons abstracte',  src: '~/assets/images/neutral/bg-4.jpg'}}
    
  >
  <Fragment slot="title">
    <span class="custom-gradient">gilsys</span> = Experiència + qualitat.
  </Fragment>

    <Fragment slot="subtitle">
        Som una empresa TIC d'Osona amb més de 20 anys d'experiència en programació de software, web i apps. Ara també <span class="custom-gradient">intel·ligència artificial</span>.
    </Fragment>
  </Hero>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    isReversed={true}
    title="Qui som?"
    subtitle=`Som un equip d'especialistes <strong>apassionats</strong> per la programació de software a mida, apps, desenvolupament d'aplicacions web i intel·ligència artificial.
    <div class="mx-auto px-4 max-w-6xl font-medium py-4 sm:px-6 text-md bg-lightgray">
    
    Si vols contactar directament amb Jordi Gil Martí, fundador de gilsys, pots fer-ho a través de <a href="#TODO" class="text-accent">LinkedIn</a>.
    </div>
    `

    items={[
      {
        title: 'Història',
        description:
          'gilsys va ser creat l’any 2004 amb l’idea d’aportar solucions de programació de software, innovadores i personalitzades, basades en <a href="#TODO">software lliure</a>.',
      },
      {
        title: 'Equip actual',
        description:
          "Actualment, comptem amb un equip format per professionals amb perfils tècnics especialitzats. Mantenim una estructura reduïda per garantir la màxima qualitat en els nostres serveis, assegurar un control rigorós en cada projecte i oferir un tracte proper als nostres clients.",          
      },
      {
        title: 'Compromís de futur',
        description:
          "A gilsys, <strong>invertim setmanalment</strong> en aprendre noves tecnologies i aportem el valora afegit de més 20 anys d'experiència desenvolupant projectes a mida, aportant rigor i fiabilitat en cada implementació.",
      },
    ]}
  />


  <!-- Features3 Widget ************** -->

  <Features3
    title="Els nostres valors"
    subtitle=""
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Qualitat',
        description:
          'Entreguem productes sòlids i estables que permeten treballar amb tranquil·litat i compleixen amb els requisits establerts.',
        icon: 'tabler:template',
      },
      {
        title: 'Experiència',
        description:
          'Sabem el què fem. Més de 20 anys en el sector ens han permès treballar en projectes d’àmbits molt diversos, amb clients a nivell nacional i internacional.',
        icon: 'tabler:template',
      },
      {
        title: 'Innovació',
        description:
          'Investiguem de forma constant per oferir resultats innovadors que aportin el valor afegit requerit en cada desenvolupament.',
        icon: 'tabler:template',
      },
      {
        title: 'Comunicació',
        description:
          'Creiem fonamental que conegui l’estat del seu projecte per poder prendre les decisions necessàries i obtenir el resultat final previst.',
        icon: 'tabler:template',
      },
      {
        title: 'Honestedat',
        description: 'Aportem les solucions pensant amb el que li convé al client, a nivell tècnic i econòmic.',
        icon: 'tabler:template',
      },
      {
        title: 'Rendiment',
        description: 'Desenvolupem pensant sempre en el rendiment del projecte, i en la seva futura escalabilitat.',
        icon: 'tabler:template',
      },
    ]}
  />

  
  <Steps
    id="resume"
    title="Metodologia de treball"
    subtitle="Encara que gilsys tracta cada projecte de forma individual i personalitzada, a nivell genèric, la nostra metodologia de treball defineix les següents fases:"
    items={[
      {
        title: 'Recollida de requisits,',
        description: `on escoltem les teves necessitats i les expectatives del projecte que es vol implementar.`,
        icon: 'tabler:clipboard-list', // Representa recollida d'informació i llistes.
      },
      {
        title: 'Consultoria tecnològica,',
        description: `depenent del projecte, serà necessari un anàlisi de la situació actual, es conceptualitzaran idees i s'oferirà assessorament tecnològic.`,
        icon: 'tabler:settings', // Simbolitza configuració i anàlisi.
      },
      {
        title: 'Presentació de proposta i planificació de fases,',
        description: `de forma consensuada amb el client segons prioritat i pressupost.`,
        icon: 'tabler:calendar-check', // Planificació i propostes per fases.
      },
      {
        title: 'Disseny,',
        description: `d'interfície d'usuari en cas de que el projecte ho requereixi.`,
        icon: 'tabler:palette', // Representa el disseny i les interfícies visuals.
      },
      {
        title: 'Programació del sistema,',
        description: `per a que realitzi les funcionalitats definides.`,
        icon: 'tabler:code', // Programació i desenvolupament de sistemes.
      },
      {
        title: 'Demostració,',
        description: `on s'exposa la solució obtinguda per a que sigui validada.`,
        icon: 'tabler:eye-check', // Validació i revisió.
      },
      {
        title: 'Entrega,',
        description: `i posta en marxa del projecte en entorn de producció.`,
        icon: 'tabler:rocket', // Llançament i entrega de projectes.
      },
      {
        title: 'Manteniment,',
        description: `on es donarà suport i es realitzaran els ajustos i correccions en cas necessari.`,
        icon: 'tabler:tools', // Representa manteniment i ajustos.
      },
      {
        title: 'Ampliacions i noves fases,',
        description: `on s'implementaran noves necessitats acordades amb el client.`,
        icon: 'tabler:replace', // Creixement, ampliacions i noves fases.
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

