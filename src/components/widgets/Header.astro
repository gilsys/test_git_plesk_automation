---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import Button from '~/components/ui/Button.astro';

import { trimSlash, getAsset } from '~/utils/permalinks';
import type { CallToAction } from '~/types';
import { getLangFromUrl, getRouteFromUrl, useRoutes, useTranslatedPath, useTranslations } from '~/utils/i18n';
import { languages } from '~/i18n/ui';
import MenuDropdown from './MenuDropdown.astro';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
  title?: string;
}

export interface MenuLink extends Link {
  links?: Array<MenuLink>;
  _id: string;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<CallToAction>;
  isSticky?: boolean;
  isDark?: boolean;
  isFullWidth?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
  showLangMenu?: boolean;
}

const {
  id = 'header',
  links = [],
  actions = [],
  isSticky = false,
  isDark = false,
  isFullWidth = false,
  showToggleTheme = false,
  showRssFeed = false,
  position = 'center',
  showLangMenu = false,
} = Astro.props;

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;

const language = getLangFromUrl(Astro.url);
const route = getRouteFromUrl(Astro.url);
const translatePath = useTranslatedPath(language);
const t = useTranslations(language);
const u = useRoutes(language);

const contactLink = links.find((link) => link._id === 'contact');
---

<header
  class:list={[
    { sticky: isSticky, relative: !isSticky, dark: isDark },
    'wg-header top-[36px] z-40 flex-none mx-auto w-full border-b border-gray-50/0 transition-[opacity] ease-in-out',
  ]}
  {...isSticky ? { 'data-aw-sticky-header': true } : {}}
  {...id ? { id } : {}}
>
  <div class="absolute inset-0"></div>
  <div
    class:list={[
      'relative text-default py-3 px-3 md:px-6 mx-auto w-full',
      {
        'md:flex md:justify-between': position !== 'center',
      },
      {
        'md:flex md:items-center': position === 'center',
      },
      {
        'max-w-7xl': !isFullWidth,
      },
    ]}
  >
    <div class:list={[{ 'mr-auto rtl:mr-0 rtl:ml-auto': position === 'right' }, 'flex justify-between relative z-10']}>
      <a class="flex items-center" href={u('home')}>
        <Logo />
      </a>
      <div class="flex items-center md:hidden">
        <ToggleMenu />
      </div>
    </div>
    <nav
      class="items-center w-full md:w-auto hidden md:flex md:ml-auto mt-4 md:mt-0 text-default overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-visible md:justify-self-center 2xl:text-sm"
      aria-label="Main navigation"
    >
      <ul
        class="flex flex-col md:flex-row md:self-center w-full md:w-auto tracking-[0.01rem] md:justify-center pt-7 md:pt-0"
      >
        {
          links.map(({ text, href, title, links, _id }) => (
            <li class:list={[`menu-item-${_id}`, { 'dropdown group': links?.length }]}>
              {links?.length ? (
                <MenuDropdown btn={{ text, href, title, _id }} links={links} />
              ) : (
                <a
                  id={_id}
                  class:list={[
                    'hover:text-accent dark:hover:text-white px-2 lg:px-4 py-3 flex items-center whitespace-nowrap  md:text-sm min-[810px]:text-base',
                    { active: href === currentPath && currentPath !== u('home') },
                  ]}
                  href={href}
                >
                  {text}
                </a>
              )}
            </li>
          ))
        }
      </ul>
    </nav>
    <div
      class:list={[
        { 'ml-auto rtl:ml-0 rtl:mr-auto': position === 'left' },
        'hidden md:self-center md:flex items-center md:mb-0 fixed w-full md:w-auto md:static justify-end left-0 rtl:left-auto rtl:right-0 bottom-0 p-3 md:p-0 md:justify-self-end',
      ]}
    >
      <div class="items-center flex justify-between w-full md:w-auto">
        <div class="flex">
          {showToggleTheme && <ToggleTheme iconClass="w-6 h-6 md:w-5 md:h-5 md:inline-block" />}
          {
            showRssFeed && (
              <a
                class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                aria-label="RSS Feed"
                href={getAsset('/rss.xml')}
              >
                <Icon name="tabler:rss" class="w-5 h-5" />
              </a>
            )
          }
        </div>
        {
          contactLink && (
            <div class="mr-auto py-2 px-4 md:hidden mobile-contact-btn">
              <a
                class:list={[
                  'hover:text-link dark:hover:text-white whitespace-nowrap',
                  { active: contactLink.href === currentPath },
                ]}
                href={contactLink.href}
              >
                {contactLink.text}
              </a>
            </div>
          )
        }
        {
          actions?.length ? (
            <span class="ml-4 rtl:ml-0 rtl:mr-4">
              {actions.map((btnProps) => (
                <Button {...btnProps} class="ml-2 py-2.5 px-5.5 md:px-6 font-semibold shadow-none text-sm w-auto" />
              ))}
            </span>
          ) : (
            ''
          )
        }
        {
          false && showLangMenu ? (
            <span class="ml-4 rtl:ml-0 rtl:mr-4 lang-menu md:hidden">
              {Object.keys(languages).map((lang) => (
                <Button
                  text={lang}
                  href={translatePath(`${route}`, lang) || translatePath('home', lang)}
                  title={`${t('language.change_to')} ${t(`language.${lang}`)}`}
                  class={`ml-2 p-0 w-10 h-10 rounded-full font-semibold shadow-none text-sm uppercase ${language === lang ? 'active' : ''}`}
                />
              ))}
            </span>
          ) : (
            ''
          )
        }
      </div>
    </div>
  </div>
</header>
