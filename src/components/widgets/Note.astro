---
const {
  h2 = await Astro.slots.render('h2'),
  p = await Astro.slots.render('p'),
  linkText = 'Informa\'t',
  linkTitle = '',
  linkHref = '',
  id,
} = Astro.props
---

<section class="wg-note not-prose shadow-lg bg-lightgray px-6 sm:px-8 md:px-12" {...(id ? { id } : {})}>
  <div class="max-w-4xl mx-auto text-md text-center py-6 flex items-center xs:flex-row sm:justify-between sm:text-left">
    <div class="w-full">
      {h2 && (
        <h2 class="text-xl sm:text-3xl font-bold leading-tight py-2 custom-gradient">
          <Fragment set:html={h2} />
        </h2>
      )}

      {p && (
        <p class="text-muted">
          <Fragment set:html={p} />
        </p>
      )}
    </div>

    {linkHref && (
      <a 
        class="btn btn-primary sm:mt-0 sm:ml-4 px-6 py-3 text-lg font-semibold text-white text-center"
        href={linkHref} 
        title={linkTitle}
      >
        {linkText}
      </a>
    )}
  </div>
</section>
