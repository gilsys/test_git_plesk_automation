---

const {
  h2 = await Astro.slots.render('h2'),
  p = await Astro.slots.render('p'),
  linkText = 'Informa\'t',
  linkTitle = '',
  linkHref = '',
  id,
} = Astro.props
---

<section class="wg-note not-prose shadow-lg bg-lightgray" {...(id ? { id } : {})}>
  <div class="max-w-4xl mx-auto text-md text-center py-4 pb-6 flex flex-col sm:flex-row sm:items-center">
    <div class="sm:w-2/3 text-left">
      {h2 && (
        <h2 class="text-xl sm:text-3xl font-bold leading-tight py-2 custom-gradient">
          <Fragment set:html={h2} />
        </h2>
      )}

      {p && (
        <p class="text-mutted">
          <Fragment set:html={p} />
        </p>
      )}
    </div>

    {linkHref && (
      <a 
        class="btn btn-primary mt-3 ms-2" 
        href={linkHref} 
        title={linkTitle}
      >
        {linkText}
      </a>
    )}
  </div>
</section>
