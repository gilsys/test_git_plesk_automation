---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getLangFromUrl, useRoutes } from '~/utils/i18n';
import Logo from '../Logo.astro';
import WidgetWrapper from '../ui/WidgetWrapper.astro';
import Image from '../common/Image.astro';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  text?: string;
  href?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
  address?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light', address = '' } = Astro.props;

const language = getLangFromUrl(Astro.url);
const u = useRoutes(language);
---

<footer
  class:list={[
    { dark: theme === 'dark' },
    'wg-footer relative border-t border-gray-200 dark:border-slate-800 not-prose, bg-lightgray',
  ]}
>
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300 intersect-once intersect-quarter intercept-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
      <div class="hidden lg:block col-span-12 lg:col-span-3 lg:-mt-6">
        <div class="mb-2 hidden sm:block">
          <a class="flex items-center" title={SITE?.name} href={u('home')}>
            <Logo />
          </a>
        </div>
        <div class="mb-2 mt-2 inline-block font-muted text-xs">
          <address class="not-italic font-normal" set:html={address} />
        </div>
      </div>
      {
        links.map(({ text, title, links, href }) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2 lg:w-52">
            <div class="dark:text-gray-300 font-medium mb-2">
              <a class="hover:text-accent" href={href} title={title}>
                {text}
              </a>
            </div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-sm">
                {links.map(({ text, href, ariaLabel, title }) => (
                  <li class="mb-2">
                    <a
                      class="hover:text-accent text-muted dark:text-gray-400 transition duration-150 ease-in-out text-xs lg:text-sm"
                      href={href}
                      aria-label={ariaLabel}
                      title={title}
                    >
                      <Fragment set:html={text} />
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>

    <div class="flex flex-col items-stretch lg:items-center">
      <div class="flex gap-8 mt-4">
        <div class="lg:hidden flex-grow">
          <div class="mb-2">
            <a class="flex items-center" title={SITE?.name} href={u('home')}>
              <Logo />
            </a>
          </div>
          <div class="mb-2 mt-2 inline-block font-muted text-xs">
            <address class="not-italic font-normal" set:html={address} />
          </div>
        </div>
        <div class="mt-14 lg:-mt-4">
          <div class="text-right lg:text-center -mb-10 lg:-mb-3 text-xs lg:text-sm">Afiliacions</div>
          <div class="mt-14 md:mt-10 lg:mt-0 md:flex gap-8 items-center h-20">
            <a
              class="pe-2 lg:pe-0"
              href="https://www.cedosona.org"
              title="Socis de Consell empresarial d'Osona"
              target="_blank"
            >
              <Image
                width={180}
                widths={[100, 150]}
                sizes="(max-width: 420px) 100px, 150px"
                src="~/assets/images/cedo-consell-empresarial-osona.png"
                alt="Logo Consell empresarial d'Osona"
              />
            </a>
            <a
              href="https://ticosona.info"
              title="Socis de TICOsona - Associació d'Empreses de Tecnologies de la Informació i la Comunicació d'Osona"
              target="_blank"
            >
              <Image
                width={180}
                widths={[100, 150]}
                sizes="(max-width: 420px) 100px, 150px"
                src="~/assets/images/tic-osona.png"
                alt="TICOsona - Associació d'Empreses de Tecnologies de la Informació i la Comunicació d'Osona"
              />
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="md:flex md:items-center md:justify-between">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 rtl:ml-0 rtl:-mr-2 rtl:md:ml-0 rtl:md:mr-4">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center"
                  aria-label={ariaLabel}
                  target="_blank"
                  href={href}
                  title={ariaLabel}
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }

      <div class="text-sm mr-4 dark:text-muted">
        <Fragment set:html={footNote} />
      </div>

      <div class="text-sm text-muted flex gap-2 mt-2 text-right lg:absolute lg:w-[calc(100%-10px)] lg:text-center lg:block lg:-ms-[10px] xl:-ms-[20px]">
        {
          secondaryLinks.map(({ text, href }, index) => (
            <>
              {index !== 0 ? ' · ' : ''}
              <a
                class="text-muted hover:text-gray-700 dark:text-gray-400 hover:underline transition duration-150 ease-in-out text-xs"
                href={href}
                set:html={text}
              />
            </>
          ))
        }
      </div>
    </div>
  </div>
</footer>
